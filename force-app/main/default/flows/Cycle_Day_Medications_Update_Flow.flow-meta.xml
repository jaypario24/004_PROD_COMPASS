    <formulas>
        <name>DaysBetweenDates</name>
        <dataType>Number</dataType>
        <expression>{!Loop_Medications.Medication_Start_Date__c}-{!Loop_Day_Events.Cycle_Day_Date__c}+1</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Dosage</name>
        <dataType>String</dataType>
        <expression>IF(
    TEXT({!Loop_Medications.Regime__c}) = &quot;Twice a Day&quot;,
    TEXT({!Loop_Medications.Dosage__c} * 2),
    IF(
        TEXT({!Loop_Medications.Regime__c}) = &quot;Three Times a Day&quot;,
        TEXT({!Loop_Medications.Dosage__c} * 3),
        TEXT({!Loop_Medications.Dosage__c})
    )
) &amp; &apos;, &apos;</expression>
    </formulas>
    <formulas>
        <name>OddEven</name>
        <dataType>String</dataType>
        <expression>IF(MOD({!DaysBetweenDates}, 2) = 0, &apos;EVEN&apos; , &apos;ODD&apos;)</expression>
    </formulas>
